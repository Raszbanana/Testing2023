{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
    "indent": ["error", 2], // Enforce 2-space indentation
    "semi": ["error", "always"], // Require semicolons at the end of statements
    "quotes": ["error", "single"], // Enforce single quotes for string literals
    "no-unused-vars": ["error"],  // Report unused variables
    "camelcase": ["error"],
    "array-bracket-spacing": ["error", "always"] // Enforce spacing around array brackets
    }
}
